<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_to_refresh"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">


            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_toolbar"
                android:layout_marginTop="6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/bg_searchview"
                android:padding="0dp"
                app:queryHint="@string/search_hint"
                android:searchIcon="@drawable/ic_baseline_search_24">

            </SearchView>

            <TextView
                android:id="@+id/tv_home_categories_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_view"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Browse from categories"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_home_restoList_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_popular"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Near You"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_home_popularList_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_categories"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="8dp"
                android:text="Popular"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/location_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_location_green"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left|center_vertical"
                    android:text="@string/resto_location"

                    android:textColor="@color/text_primary"
                    app:drawableTint="@color/info_main"
                    tools:layout_editor_absoluteX="16dp" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/tv_home_categories_title"
                android:layout_marginBottom="14dp"
                tools:listitem="@layout/item_categories" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_restos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home_restoList_title"
                tools:listitem="@layout/item_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home_popularList_title"
                android:layout_marginBottom="14dp"
                tools:listitem="@layout/item_layout_cafe_home" />

            <include
                android:id="@+id/progress_bar"
                layout="@layout/view_loading_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_view"
                android:visibility="gone" />

            <include
                android:id="@+id/view_error"
                layout="@layout/view_error"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>