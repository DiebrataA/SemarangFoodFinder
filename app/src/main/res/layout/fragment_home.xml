<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <Button
            android:id="@+id/button_sortby"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_view"
            android:background="@android:color/transparent"
            android:text="Sort By"
            app:icon="@android:drawable/arrow_down_float"
            app:iconGravity="textEnd"
            app:iconPadding="10dp"
            app:strokeColor="@color/yellow_600" />

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_searchview"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="0dp"
            android:queryHint="@string/search_hint">

        </SearchView>


        <TextView
            android:id="@+id/tv_home_categories_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_sortby"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Browse from categories"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_home_restoList_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_categories"
            android:layout_marginBottom="20dp"
            android:paddingStart="8dp"
            android:text="Popular Restos"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/tv_home_categories_title"
            android:scrollbars="horizontal"
            tools:listitem="@layout/item_categories" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_restos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_home_restoList_title"
            tools:listitem="@layout/item_layout" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:shimmer_auto_start="true"
            tools:visibility="invisible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/item_layout_placeholder" />

                    <include layout="@layout/item_layout_placeholder" />

                    <include layout="@layout/item_layout_placeholder" />

                    <include layout="@layout/item_layout_placeholder" />

                </LinearLayout>
            </ScrollView>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <include
            android:id="@+id/view_error"
            layout="@layout/view_error"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>