<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailsRestoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/details_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_operational_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="Operational hours"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_fragment_title"
            app:drawableStartCompat="@drawable/ic_time" />

        <TextView
            android:id="@+id/tv_resto_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="phone"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_operational_hours"
            app:drawableStartCompat="@drawable/ic_phone" />

        <TextView
            android:id="@+id/tv_halal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="halal"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_resto_phone"
            app:drawableStartCompat="@drawable/ic_baseline_check_24" />

        <TextView
            android:id="@+id/tv_location_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="location detail"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_halal_detail"
            app:drawableStartCompat="@drawable/ic_location_green" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_restos_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location_detail"
            tools:ignore="SpeakableTextPresentCheck"
            tools:listitem="@layout/item_resto_photo_list" />

        <TextView
            android:id="@+id/details_fragment_title_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Menu"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_restos_photo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_fragment_title_menu"
            tools:ignore="SpeakableTextPresentCheck"
            tools:listitem="@layout/item_menu_photo_list" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>